<div class="container">
  <h1>All Posts</h1>
  <% if group.posts %>
    <% group.posts.each do |p| %>
      <%= erb :'/posts/_post_view', locals:{p: p} %>
    <% end %>
  <% end %>

  <p><a href="/groups/<%= group.id %>/posts/new">Say somethin'</a></p>
  <p><a href='/groups'>More rum?</a></p>

</div>
